<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.banglabs.color_code_generator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/color_code_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/color_code_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ColorCodeGenerator">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/sample_admob_unit_id"/>

        <activity android:name=".SplashScreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".MainActivity" />
    </application>

</manifest>